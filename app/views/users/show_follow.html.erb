<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <% if @user.image? %>
　　        <%= image_tag @user.image.thumb.url %>
　      <% else %>
　　        <%= image_tag 'default.png' %>
　      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィールを見る", @user %></span>
      <span><b>投稿数:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% if user.image? %>
              <%= link_to image_tag(user.image.thumb.url, :size => '50x50'), user %>
            <% else %>
              <%= link_to image_tag('default.png', :size => '30x30'), user %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>