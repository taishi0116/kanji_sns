<div class="row">
  <div class="col-md-2 col-sm-4 col-md-offset-5 col-sm-offset-4">
    
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :image %>
      <%= f.file_field :image %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :intro, "自己紹介" %>
      <%= f.text_area :intro, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "確認用パスワード" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>
    
    <%= button_to "退会", {controller: "users", action: "destroy"}, data: {confirm: "本当に退会しますか?"}, method: :delete %>
    
  </div>
</div>